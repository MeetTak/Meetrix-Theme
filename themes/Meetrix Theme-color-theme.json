{
    "name": "Meetrix",
    "type": "dark",
    "colors": {
        // Editor Colors
        "editor.background": "#0b0d17",        // Deep space black background
        "editor.foreground": "#d0e6f7",        // Soft pastel blue for default text
        "editorCursor.foreground": "#a5f3ff",  // Neon cyan cursor
        "editor.lineHighlightBackground": "#101321", // Slightly brighter background for line highlight
        "editor.selectionBackground": "#40497d77",   // Glowing purple for selected text
        "editor.selectionHighlightBackground": "#40497d55",
        "editorIndentGuide.background1": "#2a2f47",   // Dim gray for indent guides
        "editorIndentGuide.activeBackground1": "#7088c2",  // Highlighted guide for active indentation
        "editorBracketMatch.border": "#a5f3ff", // Cyan border for bracket matching
        "editorGroup.border": "#40497d",        // Subtle purple borders around editor groups

        // Terminal Customization
        "terminal.background": "#0b0d17",       // Deep space black in terminal
        "terminal.foreground": "#d0e6f7",       // Same soft pastel blue for terminal text
        "terminalCursor.foreground": "#a5f3ff", // Neon cyan cursor in terminal
        "terminal.selectionBackground": "#40497d77",  // Glowing purple for selected text in terminal
        "terminal.ansiBlack": "#101321",        // Custom black for ANSI color
        "terminal.ansiBlue": "#2a8bd4",         // Bright blue for terminal
        "terminal.ansiCyan": "#61dafb",         // Neon cyan for ANSI cyan
        "terminal.ansiGreen": "#82d882",        // Soft green for success messages
        "terminal.ansiMagenta": "#a26db1",      // Neon purple for ANSI magenta
        "terminal.ansiRed": "#e94f69",          // Vibrant red for errors
        "terminal.ansiYellow": "#d3b359",       // Soft gold for warnings
        "terminal.ansiWhite": "#d0e6f7",        // Pastel white for terminal text

        // Sidebar Customization (File Explorer)
        "sideBar.background": "#0d1023",        // Darker black with subtle stars
        "sideBar.foreground": "#d0e6f7",        // Soft pastel blue for file names
        "sideBar.border": "#40497d",            // Subtle purple borders around sidebar
        "sideBarTitle.foreground": "#a5f3ff",   // Neon cyan for sidebar title text
        "sideBarSectionHeader.background": "#101321",  // Slightly brighter background for section headers in sidebar
        "sideBarSectionHeader.foreground": "#a5f3ff",  // Neon cyan for section headers
        "list.hoverBackground": "#40497d55",    // Glowing purple for hovered files/folders
        "list.inactiveSelectionBackground": "#20243b77",  // Soft selection for inactive sidebar items
        "list.activeSelectionBackground": "#20243b99",    // Active selection background for files in sidebar
        "list.activeSelectionForeground": "#d0e6f7",  // Foreground color for selected file
        "list.focusBackground": "#40497d55",    // Glow for focused item in sidebar

        // Activity Bar (Icons on the far left)
        "activityBar.background": "#0a0c19",    // Dark black for activity bar
        "activityBar.foreground": "#a5f3ff",    // Neon cyan for activity bar icons
        "activityBar.activeBorder": "#a5f3ff",  // Cyan border indicating active icon
        "activityBarBadge.background": "#a5f3ff", // Neon cyan badge for notifications
        "activityBarBadge.foreground": "#0b0d17", // Black text for badge content

        // Status Bar
        "statusBar.background": "#d70ed0",      // Dark status bar background
        "statusBar.foreground": "#a5f3ff",      // Neon cyan for status bar text
        "statusBar.border": "#40497d",          // Subtle purple border on the status bar
        "statusBar.debuggingBackground": "#e94f69", // Vibrant red for debugging
        "statusBar.debuggingForeground": "#0b0d17"  // Black text for debugging status
    },
    "tokenColors": [
        {
            "scope": "comment",
            "settings": {
                "foreground": "#7088c2", // Pastel green for comments
                "fontStyle": "italic"
            }
        },
        {
            "scope": "keyword",
            "settings": {
                "foreground": "#a26db1"  // Neon purple for keywords
            }
        },
        {
            "scope": "string",
            "settings": {
                "foreground": "#82d882"  // Pastel green for strings
            }
        },
        {
            "scope": "variable",
            "settings": {
                "foreground": "#f7c6e0"  // Soft pink for variables
            }
        },
        {
            "scope": "function",
            "settings": {
                "foreground": "#61dafb"  // Neon cyan for functions
            }
        },
        {
            "scope": "constant",
            "settings": {
                "foreground": "#f7c58b"  // Pastel gold for constants
            }
        }
    ]
}
