{
    "name": "Galactic Dark",
    "type": "dark",
    "colors": {
        // Editor Colors (Material Inspired)
        "editor.background": "#263238",        // Dark grayish-blue background (similar to Material Dark)
        "editor.foreground": "#ECEFF1",        // Light text for better contrast (Material style)
        "editorCursor.foreground": "#FFCC00",  // Vibrant yellow cursor for visibility
        "editor.lineHighlightBackground": "#37474F", // Slightly darker gray-blue for line highlight
        "editor.selectionBackground": "#546E7A88",   // Light bluish-gray for selected text
        "editor.selectionHighlightBackground": "#546E7A55",
        "editor.wordHighlightBackground": "#546E7A33", // Soft highlight for matching words
        "editor.findMatchBackground": "#FFEB3B55",    // Soft yellow highlight for search matches
        "editor.findMatchHighlightBackground": "#FFEB3B33",
        "editorIndentGuide.background": "#37474F",   // Subtle indent guides, slightly darker
        "editorIndentGuide.activeBackground": "#546E7A",  // Material-inspired active indent guide
        "editorBracketMatch.border": "#FFCC00",      // Yellow border for bracket matching
        "editorGroup.border": "#37474F",             // Subtle dark borders for editor groups

        // Terminal Customization
        "terminal.background": "#263238",            // Same background as the editor
        "terminal.foreground": "#ECEFF1",            // Same light text for terminal
        "terminalCursor.foreground": "#FFCC00",      // Vibrant yellow cursor in terminal
        "terminal.selectionBackground": "#546E7A88", // Light bluish-gray for selected text in terminal
        "terminal.ansiBlack": "#263238",             // Custom dark gray-black for ANSI color
        "terminal.ansiBlue": "#42A5F5",              // Material Blue for ANSI blue
        "terminal.ansiCyan": "#26C6DA",              // Cyan for ANSI cyan
        "terminal.ansiGreen": "#66BB6A",             // Material green for success messages
        "terminal.ansiMagenta": "#AB47BC",           // Material purple for ANSI magenta
        "terminal.ansiRed": "#EF5350",               // Vibrant red for errors
        "terminal.ansiYellow": "#FFCA28",            // Yellow for warnings
        "terminal.ansiWhite": "#ECEFF1",             // Light white for terminal text

        // Sidebar Customization
        "sideBar.background": "#263238",             // Same dark gray-blue as the editor
        "sideBar.foreground": "#ECEFF1",             // Light text for file names
        "sideBar.border": "#37474F",                 // Subtle border similar to Material Theme
        "sideBarTitle.foreground": "#FFCC00",        // Vibrant yellow for sidebar title text
        "sideBarSectionHeader.background": "#37474F",  // Slightly darker background for headers
        "sideBarSectionHeader.foreground": "#FFCC00",  // Vibrant yellow for section headers
        "list.hoverBackground": "#546E7A33",         // Light bluish-gray for hovered files/folders
        "list.inactiveSelectionBackground": "#37474F",  // Selection for inactive items
        "list.activeSelectionBackground": "#546E7A55",  // Soft bluish-gray for active selection
        "list.activeSelectionForeground": "#ECEFF1", // Light text for selected files
        "list.focusBackground": "#546E7A33",         // Focused item in the sidebar

        // Activity Bar and Status Bar
        "activityBar.background": "#263238",         // Dark gray-blue background for the activity bar
        "activityBar.foreground": "#FFCC00",         // Vibrant yellow for activity bar icons
        "activityBar.activeBorder": "#FFCC00",       // Yellow border for active icon
        "activityBarBadge.background": "#FFCC00",    // Yellow badge for notifications
        "activityBarBadge.foreground": "#263238",    // Dark text for the badge
        "statusBar.background": "#37474F",           // Slightly darker gray-blue for the status bar
        "statusBar.foreground": "#FFCC00",           // Yellow for status bar text
        "statusBar.border": "#37474F"                // Border around the status bar
    },
    "tokenColors": [
        {
            "scope": "comment",
            "settings": {
                "foreground": "#546E7A",   // Light gray-blue for comments
                "fontStyle": "italic"
            }
        },
        {
            "scope": "keyword",
            "settings": {
                "foreground": "#FFCA28"    // Yellow for keywords (Material-inspired)
            }
        },
        {
            "scope": "string",
            "settings": {
                "foreground": "#66BB6A"    // Material green for strings
            }
        },
        {
            "scope": "variable",
            "settings": {
                "foreground": "#42A5F5"    // Material blue for variables
            }
        },
        {
            "scope": "function",
            "settings": {
                "foreground": "#26C6DA"    // Cyan for functions
            }
        },
        {
            "scope": "constant",
            "settings": {
                "foreground": "#EF5350"    // Red for constants
            }
        }
    ]
}
